<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wtorny_sprawdz_sprzedajacego"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="pl.middlers.kupujem.Uzywane_sprawdz_sprzedajacego">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <TextView
                style="@style/wstep"
                android:text="@string/wtorny_sprawdz_sprzedajacego_akapit1" />

            <TextView
                style="@style/podtytul"
                android:text="KSIĘGA WIECZYSTA" />

            <TextView
                android:id="@+id/wtorny_sprawdz_sprzedajacego_akapit2"
                style="@style/akapit"
                android:text="@string/wtorny_sprawdz_sprzedajacego_akapit2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitStart"
                android:src="@drawable/kw1" />

            <TextView
                android:id="@+id/wtorny_sprawdz_sprzedajacego_akapit3"
                style="@style/akapit"
                android:text="@string/wtorny_sprawdz_sprzedajacego_akapit3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitStart"
                android:src="@drawable/kw2" />

            <TextView
                android:id="@+id/wtorny_sprawdz_sprzedajacego_akapit4"
                style="@style/akapit"
                android:text="@string/wtorny_sprawdz_sprzedajacego_akapit4" />

            <TextView
                style="@style/podtytul"
                android:text="WZMIANKI w KW" />

            <TextView
                android:id="@+id/wtorny_sprawdz_sprzedajacego_akapit5"
                style="@style/akapit"
                android:text="@string/wtorny_sprawdz_sprzedajacego_akapit5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitStart"
                android:src="@drawable/kw3" />

            <TextView
                android:id="@+id/wtorny_sprawdz_sprzedajacego_akapit6"
                style="@style/akapit"
                android:text="@string/wtorny_sprawdz_sprzedajacego_akapit6" />

            <TextView
                style="@style/podtytul"
                android:text="DZIAŁALNOŚĆ GOSPODARCZA" />

            <TextView
                android:id="@+id/wtorny_sprawdz_sprzedajacego_akapit7"
                style="@style/akapit"
                android:text="@string/wtorny_sprawdz_sprzedajacego_akapit7" />

            <TextView
                style="@style/podtytul"
                android:text="ROZLICZENIA ZE WSPÓLNOTĄ" />

            <TextView
                style="@style/akapit"
                android:text="@string/wtorny_sprawdz_sprzedajacego_akapit8" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>
