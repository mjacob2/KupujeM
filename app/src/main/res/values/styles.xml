<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>


    <style name="Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="Notatka">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#424242</item>
    </style>


    <style name="nrKroku">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/kroki</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    \\Styl Checkboxa zielonego

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/czeklista</item>
        <item name="android:textColorSecondary">@color/checkboxNOTchecked</item>
    </style>

    <style name="tytul">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="podtytul">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wstep">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>

    <style name="wstep_1">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="akapit">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">35dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>


